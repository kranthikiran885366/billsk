# Git attributes for consistent handling across platforms

# Auto detect text files and normalize line endings
* text=auto

# Force LF line endings for source files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Mark these as binary to prevent modifications
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Lock file handling - should not be merged automatically
pnpm-lock.yaml merge=binary
package-lock.json merge=binary
yarn.lock merge=binary

# Diff settings for specific files
*.lock linguist-generated=true
*.min.js linguist-generated=true
*.min.css linguist-generated=true

# Mark generated files
.next/** linguist-generated=true
dist/** linguist-generated=true
build/** linguist-generated=true
